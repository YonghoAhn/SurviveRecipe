<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="logintoemail" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="logintofacebook" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:colorAccent">@color/colorFacebook</item>
        <item name="android:colorButtonNormal">@color/colorFacebook</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="boxBackgroundColor">@color/colorGraylight</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
