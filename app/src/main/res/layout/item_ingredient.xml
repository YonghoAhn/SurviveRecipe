<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    android:padding="@dimen/margin_medium">

    <TextView
        android:id="@+id/textview_itemIngredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두부두부두부"
        style="@style/TextAppearance.SurviveRecipe.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_itemIngredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200000g"
        style="@style/TextAppearance.SurviveRecipe.Headline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimaryLight"
        app:layout_constraintStart_toEndOf="@+id/textview_itemIngredient_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_star_32" />
</androidx.constraintlayout.widget.ConstraintLayout>